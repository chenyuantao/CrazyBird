<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_connect_dialog_bg" >

    <TextView
        android:id="@+id/dialog_alert_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="35dp"
        android:text="是否作为服务器？"
        android:textColor="@color/connect_font_wait_text_color"
        android:textSize="@dimen/font_size_16" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_alert_yes"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_connect_button_bg"
            android:text="是"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/dialog_alert_no"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_no_button_bg"
            android:text="否"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>