<?xml version="1.0" encoding="utf-8"?>
<!-- ta盾连接时候的dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_connect_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/connect_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="等待对方连接"
        android:textColor="@color/connect_font_wait_text_color"
        android:textSize="@dimen/font_size_16" />

    <ImageView
        android:id="@+id/connect_dialog_quan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/dengdai01" />

</LinearLayout>